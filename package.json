{
  "name": "watch-together",
  "version": "1.0.0",
  "description": "watch-together",
  "main": "./src/server.ts",
  "scripts": {
    "dev": "concurrently \"npm run client:dev\" \"npm run server:dev\"",
    "build": "npm run server:build && npm run client:build",
    "preview": "node ./build/backend/server.js",
    "client:dev": "preact --src src/client watch",
    "client:build": "preact build --src src/client --dest build/client",
    "server:dev": "nodemon ./src/backend/server.ts",
    "server:build": "tsc --p tsconfig-backend.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FyFka/watch-together.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FyFka/watch-together/issues"
  },
  "homepage": "https://github.com/FyFka/watch-together#readme",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.13.0",
    "preact": "^10.10.0",
    "preact-router": "^3.2.1",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4",
    "video.js": "^7.20.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.17",
    "@types/video.js": "^7.3.50",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "concurrently": "^7.6.0",
    "eslint": "^8.20.0",
    "eslint-config-preact": "^1.3.0",
    "nodemon": "^2.0.20",
    "preact-cli": "^3.4.0",
    "sirv-cli": "^2.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.5.2"
  }
}
