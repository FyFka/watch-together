{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "allowJs": true,
    "paths": {
      "react": ["../../node_modules/preact/compat"],
      "react-dom": ["../../node_modules/preact/compat"]
    }
  }
}
